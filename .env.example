# Idle RPG - Environment Variables Template
# Copy this file to .env.local for local development
# IMPORTANT: In Vite, only variables prefixed with VITE_ are exposed to your client-side code

# Application Configuration
VITE_APP_TITLE="Idle RPG"
VITE_APP_VERSION="0.0.0"

# Development Settings
VITE_ENABLE_DEBUG=false
VITE_ENABLE_LOGGING=true

# Game Configuration (optional - can be used for different game modes)
VITE_GAME_MODE="normal"
VITE_STARTING_GOLD=0
VITE_STARTING_LEVEL=1

# API Configuration (if you add backend integration in the future)
# VITE_API_URL=http://localhost:3000
# VITE_API_TIMEOUT=5000

# Analytics (if you add analytics in the future)
# VITE_ANALYTICS_ENABLED=false
# VITE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_AUTO_SAVE=true
VITE_SAVE_INTERVAL=1000
