# Environment Variables Template
# Copy this file to .env.local and fill in your values
# Note: In Vite, only variables prefixed with VITE_ are exposed to client code

# App Configuration
VITE_APP_TITLE=Idle RPG
VITE_APP_VERSION=0.0.0

# Development Settings
VITE_DEBUG_MODE=false
VITE_SHOW_PHYSICS_DEBUG=false

# API Configuration (if you add a backend later)
# VITE_API_URL=http://localhost:3000
# VITE_API_TIMEOUT=5000

# Game Configuration
VITE_AUTO_SAVE_INTERVAL=1000
VITE_ENABLE_ANALYTICS=false

# Third-party Services (examples for future use)
# VITE_ANALYTICS_ID=
# VITE_SENTRY_DSN=
