# Idle RPG Environment Variables
# Copy this file to .env for local development
# Note: In Vite, only variables prefixed with VITE_ are exposed to your client code

# Application Configuration
VITE_APP_TITLE=Idle RPG
VITE_GAME_VERSION=0.0.1

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_PHYSICS=false
VITE_SHOW_FPS=false

# Game Configuration (optional - can override defaults)
VITE_BASE_ATTACK_SPEED=1000
VITE_AUTO_SAVE_INTERVAL=1000

# API Configuration (for future backend integration)
# VITE_API_URL=http://localhost:3000/api
# VITE_API_TIMEOUT=5000

# Feature Flags (for toggling features)
VITE_FEATURE_MULTIPLAYER=false
VITE_FEATURE_ACHIEVEMENTS=false

# Asset Configuration
# VITE_CDN_URL=https://your-cdn.com/assets
