# Idle Quest - Environment Variables Template
# Copy this file to .env.local for local development
# Note: In Vite, environment variables must be prefixed with VITE_ to be exposed to the client

# API Configuration (if you add a backend in the future)
# VITE_API_URL=http://localhost:3000
# VITE_API_KEY=your_api_key_here

# Analytics (if you add analytics tracking)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_ANALYTICS_ENABLED=true

# Feature Flags
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_CHEATS=false

# Game Configuration
# VITE_MAX_LEVEL=100
# VITE_STARTING_GOLD=0

# Deployment
# VITE_APP_ENV=development
