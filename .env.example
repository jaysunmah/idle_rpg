# Idle Quest RPG - Environment Variables Template
# Copy this file to .env.local for local development
# Note: In Vite, only variables prefixed with VITE_ are exposed to your app

# Application Configuration
VITE_APP_TITLE=Idle Quest
VITE_APP_VERSION=0.0.0

# API Configuration (if you add a backend later)
# VITE_API_URL=http://localhost:3000
# VITE_API_TIMEOUT=5000

# Feature Flags
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_ANALYTICS=false

# Analytics (if you add tracking later)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=

# Game Configuration
# VITE_MAX_SAVE_SLOTS=3
# VITE_AUTO_SAVE_INTERVAL=1000

# Development
VITE_DEV_MODE=true
