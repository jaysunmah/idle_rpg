# Idle Quest - Environment Variables Template
# Copy this file to .env.local for local development

# Vite Environment Variables must be prefixed with VITE_ to be exposed to your app
# See: https://vitejs.dev/guide/env-and-mode.html

# Application Configuration
VITE_APP_TITLE=Idle Quest - Side Scroller RPG
VITE_APP_VERSION=0.0.0

# Development Configuration
VITE_DEBUG_MODE=false
VITE_SHOW_FPS=false

# Game Configuration (optional - customize game behavior)
VITE_STARTING_LEVEL=1
VITE_STARTING_GOLD=0

# API Configuration (uncomment when you add backend features)
# VITE_API_URL=http://localhost:3000
# VITE_API_TIMEOUT=5000

# Analytics (uncomment when adding analytics)
# VITE_ANALYTICS_ID=
# VITE_ANALYTICS_ENABLED=false
